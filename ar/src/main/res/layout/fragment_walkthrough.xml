<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="android.tesseract.jio.covid19.ar.walkthrough.WalkThroughActivity">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpWalkThrough"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivJioLogo"
            android:layout_width="@dimen/_44DP"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40DP"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_jio_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_106DP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivDot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_wlk_oval" />

            <ImageView
                android:id="@+id/ivDot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/_8DP"
                android:alpha=".3"
                android:contentDescription="@null"
                android:src="@drawable/ic_wlk_oval" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16DP"
            android:layout_marginEnd="@dimen/_16DP"
            android:layout_marginBottom="@dimen/_20DP"
            android:padding="@dimen/_14DP"
            android:text="@string/btn_get_started"
            android:textColor="@color/white"
            android:textSize="@dimen/_12SP"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/bg_btn_get_start"
            app:customFont="@{@string/font_semi_bold}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>